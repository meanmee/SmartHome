<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_voice"
        android:hint="识别结果"
        app:baseColor="@color/colortheme_blue"
        app:primaryColor="@color/colortheme_blue"/>

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_startRec"
        android:text="开始语音识别"></com.gc.materialdesign.views.ButtonFlat>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/button_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colortheme_blue"
        android:text="Button" />

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/button_initClo"
        android:text="初始化云端识别"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.gc.materialdesign.views.ButtonFloat>
</LinearLayout>
